<Window x:Class="WpfApp4.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="330" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="20">

        <Button Content="Login" Click="LoginButton_Click" Height="51" 
                DockPanel.Dock="Bottom" Margin="0,20,0,0" />

        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="Username:" FontSize="14" />
            <TextBox x:Name="UsernameBox" Margin="0,5,0,10" Height="35" 
                     FontSize="18"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center" />

            <TextBlock Text="Password:" FontSize="14"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10" Height="35" 
                         FontSize="18"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center" />
        </StackPanel>
    </DockPanel>
</Window>
